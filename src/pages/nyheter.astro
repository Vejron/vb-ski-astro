---

import RaceLayout from '../layouts/RaceLayout.astro';
import ArticleListing from '../components/ArticleListing.vue';
// Component Imports
// You can import components from any supported Framework here!

// Remember: Astro component scripts log to the CLI
//console.log(JSON.stringify(stories));
const posts = await Astro.glob('./blog/*.md'); // returns an array of posts that live at ./src/pages/post/*.md

---
<RaceLayout footer="bg-white" title="Umeloppet">
  
  <section class="max-w-2xl mx-auto px-6 mb-8 mt-12">
    <h2 class="text-4xl font-bold text-center uppercase my-6" >Alla nyheter</h2>
    <ArticleListing posts={posts}></ArticleListing>
  </section>

  
</RaceLayout>
