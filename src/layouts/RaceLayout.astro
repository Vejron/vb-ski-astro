---
import Logo from '../components/Logo.astro'
const {title} = Astro.props;
---
<html lang="sv">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
    
  </head>
  <body class="">
    <!-- Adds a navigation bar to every page. -->
    <div class="shadow-xl">
      <header class="z-10 overflow-hidden sm:overflow-visible relative px-4 py-4 flex sm:flex-col justify-between sm:justify-center items-center w-full max-w-5xl mx-auto">
        <p class="hidden sm:block text-4xl font-bold -mb-4 text-transparent bg-clip-text bg-gradient-to-r from-purple-600 via-pink-500 to-purple-600">UMELOPPET</p>
        <div class="sm:hidden place-self-start">
        <div class="bg-slate-300  transform absolute">
        <p class="font-bold text-transparent bg-clip-text px-44 bg-gradient-to-r from-purple-600 via-pink-500 to-purple-600">Västerbottens<br/> skidveteraner</p>
        </div>
        </div>
        <nav class="sm:text-xl flex-shrink-0 grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4 items-end transform sm:translate-y-9">
          <a class="main-link" href="/">Hem</a>
          <a class="main-link" href="/anmalan">Anmälan</a>
          <a class="main-link" href="/resultat">Resultat</a>
          <a class="main-link" href="#">Kontakt</a>
        </nav>
      </header>
    </div>
    
    
    <!-- slot: your page content will be injected here. -->
    <slot />
  </body>
</html>