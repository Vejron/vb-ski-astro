---

import RaceLayout from '../layouts/RaceLayout.astro';
import FeaturedArticles from '../components/FeaturedArticles.astro';
import TopShape from '../components/TopShape.astro';

const posts = await Astro.glob('./blog/*.md'); // returns an array of posts that live at ./src/pages/post/*.md
---
<RaceLayout footer="bg-slate-800" title="Umeloppet">
  <div class="relative">
    <section class="hero-grid h-72 sm:h-[500px] max-w-5xl mx-auto px-6">
    </section>
    <TopShape classes="absolute bottom-0 text-slate-800"></TopShape>
  </div>
  
  <section class="bg-slate-800">
    <div class="max-w-5xl mx-auto px-6 pt-1 pb-8 text-white">
      <h2 class="text-4xl font-bold text-center uppercase my-6" >Senaste nyheterna</h2>
      <FeaturedArticles posts={posts}></FeaturedArticles>
    </div>
  </section>
 
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</RaceLayout>
