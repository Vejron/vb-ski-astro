---

import RaceLayout from '../layouts/RaceLayout.astro';
import FeaturedArticles from '../components/FeaturedArticles.vue';
// Component Imports
// You can import components from any supported Framework here!

// Remember: Astro component scripts log to the CLI
//console.log(JSON.stringify(stories));
const posts = Astro.fetchContent('./blog/*.md'); // returns an array of posts that live at ./src/pages/post/*.md

---
<RaceLayout title="Umeloppet">
  <section class="hero-grid h-72 sm:h-[500px] max-w-5xl mx-auto px-6">
  </section>

  <section class="max-w-5xl mx-auto px-6 mb-8">
    <h2 class="text-4xl font-bold text-center uppercase my-6" >Senaste nyheterna</h2>
    <FeaturedArticles posts={posts}></FeaturedArticles>
  </section>

  

  <section class="map-grid h-[815px] max-w-5xl mx-auto my-8 px-6">
  </section>

  

  
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</RaceLayout>
